{{ if (and (eq .chezmoi.os "darwin" "linux") (not .headless)) -}}
#!/bin/bash

set -eufo pipefail

plugins=(
    cargo-add
    cargo-audit
    cargo-bloat
    cargo-deps
    cargo-expand
    cargo-geiger
    cargo-generate
    cargo-make
    cargo-update
    cargo-watch
    cargo-whatfeatures
    microserver
    trunk
    wasm-bindgen-cli
    wasm-pack
)
rustup default stable
rustup target add wasm32-unknown-unknown
for plugin in ${plugins[@]}; do
    cargo install $plugin
done
{{ end }}
