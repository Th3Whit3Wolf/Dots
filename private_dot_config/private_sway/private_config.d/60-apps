# Open terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# Open launcher
bindsym $mod+Space exec $menu

# Start Web Browser
bindsym $mod+Shift+w exec $browser

# Open File Manager
bindsym $mod+t exec $files

# Open Visual Editor
bindsym $mod+c exec $editor

# reload the configuration file
bindsym $mod+Alt+c reload

# exit sway
bindsym $mod+Alt+q exit
bindsym $mod+Alt+p exec systemctl poweroff
bindsym $mod+Alt+s exec systemctl suspend

bindsym $mod+Alt+l exec $lock