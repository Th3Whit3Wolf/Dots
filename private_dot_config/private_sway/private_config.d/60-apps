# Open terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# Open launcher
bindsym $mod+Space exec $menu

# Start Web Browser
bindsym $mod+Shift+w exec $browser

# Open File Manager
bindsym $mod+t exec $files

# Open Visual Editor
bindsym $mod+c exec $editor

# reload the configuration file
bindsym $mod+Alt+c reload

# exit sway
bindsym $mod+Alt+q exit
bindsym $mod+Alt+p exec systemctl poweroff
bindsym $mod+Alt+s exec systemctl suspend

# Lockscsreen
bindsym $mod+Alt+l exec $lock

# Screenshot whole screen
bindsym Print exec grim $screenshot_dir/$(date +%Y%m%d_%Hh%Mm%Ss)_grim.png

# Screenshot current window
bindsym $mod+Print exec grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"')" $screenshot_dir/$(date +%Y%m%d_%Hh%Mm%Ss)_grim.png

# Screenshot region
bindsym Shift+Print exec grim -g "$(slurp -b '#AFAFAFAF' -c '#FF3F3FAF' -s '#00000000' -w 3 -d)" $screenshot_dir/$(date +%Y%m%d_%Hh%Mm%Ss)_grim.png

